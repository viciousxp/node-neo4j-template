extends layout

block content
    if authentic === true
        h1 Password Reset

        p
            a(href='/') Back to home

        form(action='/passwordReset/#{user}/#{vCode}', method='POST')
            p New Password:
            input(type='password', name='password', placeholder='Enter new password', required)
            input(type='submit', value='submit')
    else
        h1 Unauthorized password reset

        a(href='/') Back to home