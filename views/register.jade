extends layout

block content
    h1 Register

    p
        a(href='/') Back to home

    form(action='/register', method='POST')
        p Username:
        input(type='text', name='username', required)
        p Email:
        input(type='text', name='email', required)
        p password:
        input(type='password', name='password', required)
        input(type='submit', value='Update')